<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Responsive User Form</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  >
  <style>
    body {
      background: linear-gradient(to right, #00c6ff, #0072ff);
      color: #333;
    }

    .card {
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: scale(1.02);
    }

    .form-label {
      font-weight: bold;
    }

    .animated-input {
      transition: all 0.2s ease-in-out;
    }

    .animated-input:focus {
      box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
      border-color: #007bff;
    }
  </style>
</head>
<body>
  <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg w-100" style="max-width: 500px;">
      <h2 class="text-center mb-4">User Registration</h2>
      <form action="/submit" method="POST" onsubmit="return validateForm()">
        <div class="mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" id="name" name="name" placeholder="Enter your name" class="form-control animated-input" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input type="email" id="email" name="email"  placeholder="Enter your email" class="form-control animated-input" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter Strong password"  class="form-control animated-input" required>
          <small id="passwordHelp" class="form-text text-muted"></small>
        </div>
        <button type="submit" class="btn btn-primary w-100 mb-3">Register</button>
        <div class="text-center">
          <p class="mb-3">or</p>          <a href="/auth/google" class="btn btn-light w-100 border d-flex align-items-center justify-content-center gap-2">
            <svg width="20" height="20" viewBox="0 0 24 24">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
            </svg>
            Continue with Google
          </a>
        </div>
      </form>
    </div>
  </div>

  <script>
  const passwordInput = document.getElementById('password');
  const passwordHelp = document.getElementById('passwordHelp');

  passwordInput.addEventListener('input', () => {
    const value = passwordInput.value;
    if (value.length < 6) {
      passwordHelp.textContent = "Too short – must be at least 6 characters.";
      passwordHelp.style.color = "red";
    } else if (!/[A-Z]/.test(value) || !/\d/.test(value)) {
      passwordHelp.textContent = "Include 1 uppercase letter and 1 number.";
      passwordHelp.style.color = "orange";
    } else {
      passwordHelp.textContent = "Strong password ✔";
      passwordHelp.style.color = "green";
    }
  });

  function validateForm() {
    const password = passwordInput.value;
    if (password.length < 6 || !/[A-Z]/.test(password) || !/\d/.test(password)) {
      alert("Password must be at least 6 characters and include an uppercase letter and a number.");
      return false;
    }
    return true;
  }
</script>

</body>
</html>
